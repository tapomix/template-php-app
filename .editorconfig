# @see https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 250
trim_trailing_whitespace = true

[compose*.yaml]
indent_size = 2

[*.json]
insert_final_newline = false

[*.twig]
insert_final_newline = false

[*.blade.php]
insert_final_newline = false

[*.neon]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
